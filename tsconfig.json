{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/*"],
      "@api": ["./src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
